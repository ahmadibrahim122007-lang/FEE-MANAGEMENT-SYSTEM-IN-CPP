#include <iostream>
#include <fstream>
#include "functions.h"
using namespace std;

void menu()
{
    cout << "\n===== Fee Management System =====\n";
    cout << "1. Add Student\n";
    cout << "2. Pay Fee\n";
    cout << "3. View Records\n";
    cout << "4. Search Student\n";
    cout << "5. Delete Student\n";
    cout << "6. Exit\n";
    cout << "Enter choice: ";
}

void addStudent()
{
    int roll, total;
    int paid = 0;
    string name;

    ofstream file("fees.csv", ios::app);

    cout << "Enter Roll No: ";
    cin >> roll;
    cout << "Enter Name: ";
    cin >> name;
    cout << "Enter Total Fee: ";
    cin >> total;

    file << roll << "," << name << "," << total << "," << paid << endl;
    file.close();

    cout << "Student added successfully!\n";
}
